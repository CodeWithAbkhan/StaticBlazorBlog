 <div class="card mx-2 mb-3" style="width: 18rem;">
        <img src="@(blog.Thumbnail)" class="card-img-top" alt="@blog.Description">
        <div class="card-body">
            <h2 class="card-title">@blog.Title</h2>
            <p class="card-text">@blog.Description</p>
            <a href="/@blog.Slug" title="@blog.Title"  class="btn btn-primary">More about Blog</a>
        </div>
        </div>
@code {

  [Parameter]
  public BlogPost blog {get; set;} = new();

}
